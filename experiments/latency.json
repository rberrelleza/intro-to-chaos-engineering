{
    "version": "1.0.0",
    "title": "What is the impact of high latency?",
    "description": "If the network slows down, we should gracefully deal with the issue.",
    "tags": ["network"],
    "steady-state-hypothesis": {
        "title": "Application responds",
        "probes": [
            {
                "type": "probe",
                "name": "the-astre-service-must-be-running",
                "tolerance": true,
                "provider": {
                    "type": "python",
                    "module": "os.path",
                    "func": "exists",
                    "arguments": {
                        "path": "/tmp/astre.pid"
                    }
                }
            },
            {
                "type": "probe",
                "name": "the-sunset-service-must-be-running",
                "tolerance": true,
                "provider": {
                    "type": "python",
                    "module": "os.path",
                    "func": "exists",
                    "arguments": {
                        "path": "/tmp/sunset.pid"
                    }
                }
            },
            {
                "type": "probe",
                "name": "the-proxy-must-be-running",
                "tolerance": 200,
                "provider": {
                    "type": "http",
                    "timeout": 3,
                    "func": "exists",
                    "verify_tls": false,
                    "url": "http://localhost:8474/proxies"
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "we-can-request-sunset",
            "tolerance": 200,
            "provider": {
                "type": "http",
                "timeout": 3,
                "verify_tls": false,
                "url": "http://localhost:8080/city/Paris"
            }
        }
    ],
    "rollbacks": []
}